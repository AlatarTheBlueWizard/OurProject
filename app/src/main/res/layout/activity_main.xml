<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_takeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="41dp"
        android:text="@string/take_group" />

    <Button
        android:id="@+id/to_selfie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="41dp"
        android:onClick="startSelfieActivity"
        android:text="@string/to_next" />

    <TextureView
        android:id="@+id/groupView"
        android:layout_width="wrap_content"
        android:layout_height="1450px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="106dp" />

    <TextView
        android:id="@+id/instruction_group"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_above="@+id/groupView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="18dp"
        android:text="@string/instruction_group"
        android:textAlignment="center"
        android:textSize="24sp" />
</RelativeLayout>